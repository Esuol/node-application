
{
  "verbose": false,
  "debug": false,
  "exec": "ts-node -r tsconfig-paths/register --files ./app.ts",
  "ignore": [
    "mochawesome-report",
    "node_modules",
    "./test",
    "**/*.d.ts",
    "*.test.ts",
    "*.spec.ts",
    "fixtures/*",
    "test/**/*",
    "docs/*"
  ],
  "events": {
    "restart": ""
  },
  "watch": ["app/", "./app.ts"],
  "ext": "ts, js, css",
  "inspect": true
}